<div class="random-beer-partial">

    <img class="beer-image" src={{this.image_url}} />
    <div class="beer-data">
        <p class="beer-name">{{this.name}}</p>
        <p class="beer-tagline">{{this.tagline}}</p>
        <p class="beer-description">{{this.description}}</p>

        {{!-- Diff√©rence avec beerPartial --}}
        <p class="title">Food pairing</p>
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p class="title">Brewers tips</p>
        <p class="beer-brewers-tips">{{this.brewers_tips}}</p>

    </div>


</div>