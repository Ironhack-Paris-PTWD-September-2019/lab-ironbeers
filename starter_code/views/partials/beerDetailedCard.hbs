<div class="beerDetailedCard">
    <div class="picture">
        {{#if image_url}}
        <img src="{{ image_url }}" alt="{{ name }}" />
        {{else}}
        <img src="./images/no-picture.png" alt="visual not available" />
        {{/if}}
    </div>
    <div class="information">
        <h2>{{ name }}</h2>
        <p class="tagline">{{ tagline }}</p>
        <p class="description">{{ description }}</p>
        <p class="foodPairing">Food pairing</h3>
        <ul>
        {{#each food_pairing}}
            <li>{{ this }}</li>
        {{/each}}
        </ul>
        <p class="brewersTips"><b>Brewers tips:</b> {{ brewers_tips }}</p>
    </div>
</div>